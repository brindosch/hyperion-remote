// app global css
// Hyperion brand color
.text-hyperion
  color #2b819a

.bg-hyperion
  background #2b819a

// prevent user selection
.non-selectable-alias
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

// allows user selection
.allow-select
  -webkit-user-select text
  -moz-user-select text
  -ms-user-select text
  user-select text

// Dark and light design definitions
body.body--light
  background $grey-1
  color $grey-10
  .q-menu 
    background $grey-2
  // with a base color of grey-10 for light mode, an opacity of 0.6 is too dimmed. This class is used by QDialogPlugin for the message part
  .q-dialog__message
    opacity 0.8

body.body--dark
  background $dark
  .q-menu 
    background $grey-9

// other changes
.q-drawer
  background inherit
.q-tab-panels
  background inherit
.q-table__container
  background inherit
.inset-shadow-1
  box-shadow: 0 5px 7px -7px rgba(0,0,0,0.7) inset !important

// transform zooming classes
.zoom-2
  transform scale(1.2)
// better readable tooltips
.q-tooltip
  font-size 90%
  max-width 500px

